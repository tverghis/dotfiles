alert = #bd2c40

[bar/arch_bar]
; monitor = ${env:MONITOR:DP2}
width = 100%
height = 2.5%
radius = 6.0
fixed-center = false
; bottom = true

background = ${colors.background}
foreground = ${colors.foreground}

border-size = 0
line-size = 2
